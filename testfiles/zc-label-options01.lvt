\documentclass{book}

\input{regression-test}

\RequirePackage[enable-debug]{expl3}

\ExplSyntaxOn
\debug_on:n { check-declarations , deprecation }
\ExplSyntaxOff

\newcommand{\testtmp}{}

\usepackage[english]{babel}

\usepackage{zref-clever}
\usepackage{zref-check}
\usepackage{zref-titleref}

\usepackage{hyperref}

% This file is intended to test all label related options and respective
% values.

\begin{document}

\textsuperscript{avoid font warning}

\START

\BEGINTEST{Option: countertype=...}
\begin{equation}
  \zlabel{equationA}
\end{equation}
\begin{equation}
  \zcsetup{countertype={equation=myequation}}
  \zlabel{equationB}
\end{equation}
\begin{equation}
  \zcsetup{countertype={fooequation=myequation}}
  \zlabel{equationC}
\end{equation}
\begin{equation}
  \zcsetup{countertype={section=mysection}}
  \zlabel{equationD}
\end{equation}
\makeatletter
\show\Z@R@equationA
\show\Z@R@equationB
\show\Z@R@equationC
\show\Z@R@equationD
\makeatother
\ENDTEST

\BEGINTEST{Option: reftype=...}
\begin{equation}
  \zlabel{equationE}
\end{equation}
\begin{equation}
  \zcsetup{reftype=myequation}
  \zlabel{equationF}
\end{equation}
\makeatletter
\show\Z@R@equationE
\show\Z@R@equationF
\makeatother
\ENDTEST

\BEGINTEST{Option: counterresetters=...}
\OMIT
\newcounter{parentfoobar}
\setcounter{parentfoobar}{7}
\newcounter{foobar}[parentfoobar]
\TIMO
\ExplSyntaxOn
\renewcommand{\testtmp}{ \seq_show:N \l__zrefclever_counter_resetters_seq }
\testtmp
\zcsetup{counterresetters=parentfoobar}
\renewcommand{\testtmp}{ \seq_show:N \l__zrefclever_counter_resetters_seq }
\testtmp
\ExplSyntaxOff
\refstepcounter{foobar}
\zlabel{foobar}
\makeatletter
\show\Z@R@foobar
\makeatother
\ENDTEST

\BEGINTEST{Option: counterresetby=...}
\OMIT
\newcounter{parentbarbaz}
\setcounter{parentbarbaz}{7}
\newcounter{barbaz}
\TIMO
\ExplSyntaxOn
\renewcommand{\testtmp}{ \prop_show:N \l__zrefclever_counter_resetby_prop }
\testtmp
\zcsetup{counterresetby={barbaz=parentbarbaz}}
\renewcommand{\testtmp}{ \prop_show:N \l__zrefclever_counter_resetby_prop }
\testtmp
\ExplSyntaxOff
\refstepcounter{barbaz}
\zlabel{barbaz}
\makeatletter
\show\Z@R@barbaz
\makeatother
\ENDTEST

\BEGINTEST{Option: currentcounter=...}
\OMIT
\newtheorem{theorem}{Theorem}
\TIMO
\begin{theorem}
  \zlabel{theoremA}
\end{theorem}
\begin{theorem}
  \zcsetup{currentcounter=equation}
  \zlabel{theoremB}
\end{theorem}
\makeatletter
\show\Z@R@theoremA
\show\Z@R@theoremB
\makeatother
\ENDTEST

\OMIT

\end{document}
